<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhihuihengxing.ebook.signup.SignUpActivity">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:id="@+id/iv_sign_up_logo"
        android:scaleType="centerInside"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/logo"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@id/iv_sign_up_logo"
        android:id="@+id/tl">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名："
                android:gravity="right"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:hint="请输入用户名"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:id="@+id/et_sign_up_username"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:id="@+id/ibtn_sign_up_username"
                android:scaleType="centerInside"
                />
        </TableRow>
        <View
            android:layout_height="1dip"
            android:background="#c0c0c0" />
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:gravity="right"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:hint="请输入密码 6到11位"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:inputType="textPassword"
                android:id="@+id/et_sign_up_password"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:id="@+id/ibtn_sign_up_password"
                android:scaleType="centerInside"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码："
                android:gravity="right"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:hint="请再次输入密码 6到11位"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:inputType="textPassword"
                android:id="@+id/et_sign_up_password2"
                android:layout_marginLeft="8dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>

            <ImageButton
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:id="@+id/ibtn_sign_up_password2"
                android:scaleType="centerInside"
                />
        </TableRow>
    </TableLayout>
    <Button
        android:layout_width="288dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:background="#6be460"
        android:textSize="23sp"
        android:textColor="#FFF"
        android:id="@+id/btn_sign_up"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/tl"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
