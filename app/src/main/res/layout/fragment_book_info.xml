<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".main.view.BookInfoFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
                <ImageView
                    android:id="@+id/iv_main_fra_book_info"
                    android:src="@drawable/test"
                    android:scaleType="centerCrop"
                    android:layout_width="@dimen/bookIvWidth"
                    android:layout_height="@dimen/bookIvHeight" />
                <RelativeLayout
                    android:layout_marginLeft="15dp"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/bookIvHeight"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_bookname_fra_book_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textSize="28sp"
                        android:text="钢铁是怎样炼成的"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/author"
                        android:scaleType="centerCrop"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true"
                        android:id="@+id/iv_fra_book_info" />
                    <TextView
                        android:id="@+id/tv_author_fra_book_info"
                        android:gravity="center_vertical"
                        android:text="李白"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_alignTop="@id/iv_fra_book_info"
                        android:layout_toEndOf="@id/iv_fra_book_info"
                        android:singleLine="true"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tv_add_collect_fra_book_info"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="收藏"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:background="@drawable/book_info_selector"/>
                <View
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_download_fra_book_info"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="下载"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:background="@drawable/book_info_selector"/>
                <View
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_download_and_read_fra_book_info"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="阅读"
                    android:gravity="center"
                    android:textSize="19sp"
                    android:background="@drawable/book_info_selector"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/lineGray"/>

            <LinearLayout
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:text="内容描述"
                    android:textSize="23sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_discribe_fra_book_info"
                    android:layout_marginTop="20dp"
                    android:textSize="21sp"
                    android:text="但它们还是接受了：猪总是猪啊"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </FrameLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
